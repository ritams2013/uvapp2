{
  "name": "Message",
  "type": "object",
  "properties": {
    "to_email": {
      "type": "string",
      "description": "Recipient email address"
    },
    "subject": {
      "type": "string",
      "description": "Message subject"
    },
    "content": {
      "type": "string",
      "description": "Message content"
    },
    "is_read": {
      "type": "boolean",
      "default": false,
      "description": "Whether the message has been read"
    },
    "artifact_id": {
      "type": "string",
      "description": "Related artifact ID (optional)"
    },
    "message_type": {
      "type": "string",
      "enum": [
        "direct",
        "notification"
      ],
      "default": "direct",
      "description": "Type of message"
    }
  },
  "required": [
    "to_email",
    "content"
  ],
  "rls": {
    "read": {
      "or": [
        {
          "record_condition": {
            "to_email": "{{user.email}}"
          }
        },
        {
          "record_condition": {
            "created_by": "{{user.email}}"
          }
        }
      ]
    },
    "write": {
      "user_condition": {}
    }
  }
}