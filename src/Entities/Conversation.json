{
  "name": "Conversation",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "Conversation name"
    },
    "participants": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Array of participant emails"
    },
    "is_group": {
      "type": "boolean",
      "default": false,
      "description": "Whether this is a group chat"
    },
    "is_announcement": {
      "type": "boolean",
      "default": false,
      "description": "Whether this is an announcement/information chat"
    },
    "allowed_senders": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Array of emails who can send messages (empty means all participants can send)"
    },
    "last_message_at": {
      "type": "string",
      "format": "date-time",
      "description": "Timestamp of last message"
    }
  },
  "required": [
    "participants"
  ],
  "rls": {
    "read": {
      "user_condition": {}
    },
    "write": {
      "user_condition": {}
    }
  }
}